<div class="container d-grid gap-2 col-6 mx-auto ">
  <div>
    <div class="mt-3">
      <div class="success">
        <h2 style="display:block">Success ! Please use this link :</h2>
        <span>
          <a href="/{{shortURL}}" class="short-url text-primary">
            <h3 id="copy"> http://localhost:3000/{{shortURL}} </h3>
          </a>
        </span>
      </div>
    </div>
    <div class="mt-4">
      <button class="btn btn-primary d-grid gap-2 col-3 mx-auto" onclick="copyLink()">Copy</button>
    </div>
  </div>
</div>

<script>
  function copyLink() {
    const URL = document.getElementById('copy').textContent
    navigator.clipboard.writeText(URL)
      .then(alert("Copied : " + URL))
      .catch(error => console.log(error))
  }
</script>