<div class="container d-grid gap-2 col-6 mx-auto ">
  <form action="/show" method="POST" style="display: inline;">
    <div class="input-group mt-3">
      <input class="form-control" type="text" placeholder="請輸入網址" name="originalURL" {{#if value}} value="{{value}}" {{/if}} required>
    </div>
    {{#if wrongURL}}
    <div>
      <span class="d-grid gap-2 col-5 mx-auto mt-3 text-danger">The URL you enter is not valid</span>
    </div>
    {{/if}}
    <div class="mt-4">
      <button class="btn btn-success d-grid gap-2 col-3 mx-auto " type="submit">Generate</button>
    </div>
  </form>
</div>